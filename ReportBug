  <body>
    <h2>Zg≈Ço≈õ b≈ÇƒÖd lub sugestiƒô</h2>
    <p class="subtitle">
      Twoja opinia pomaga nam ulepszaƒá aplikacjƒô. Dziƒôkujemy! üôè
    </p>
    
    <div class="context-info">
      üìç Aktywny partner: <strong><?= activePartner ?></strong>
    </div>
    
    <label for="message">
      Opisz problem lub podziel siƒô pomys≈Çem:
    </label>
    <textarea 
      id="message" 
      placeholder="Przyk≈Çad: Po klikniƒôciu 'Przelicz trendy' aplikacja zawiesza siƒô na 2 minuty..."
      maxlength="2000"
      oninput="updateCharCount()"
    ></textarea>
    <div class="char-count">
      <span id="charCount">0</span> / 2000 znak√≥w
    </div>
    
    <div class="buttons">
      <button id="sendBtn" onclick="send()">
        Wy≈õlij
      </button>
      <button id="cancelBtn" onclick="cancel()">
        Anuluj
      </button>
      <div id="spinner" class="spinner"></div>
    </div>
    
    <div id="status" class="status"></div>

    <script>
      function updateCharCount() {
        const textarea = document.getElementById('message');
        const count = document.getElementById('charCount');
        count.textContent = textarea.value.length;
      }
      
      function send() {
        const message = document.getElementById('message').value.trim();
        const sendBtn = document.getElementById('sendBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const spinner = document.getElementById('spinner');
        const status = document.getElementById('status');
        
        if (!message) {
          showStatus('Wpisz tre≈õƒá wiadomo≈õci', 'error');
          return;
        }
        
        // Zablokuj przyciski
        sendBtn.disabled = true;
        cancelBtn.disabled = true;
        sendBtn.textContent = 'Wysy≈Çam...';
        spinner.style.display = 'inline-block';
        status.style.display = 'none';
        
        // Wy≈õlij przez Google Apps Script
        google.script.run
          .withSuccessHandler(onSuccess)
          .withFailureHandler(onFailure)
          .sendBugReport(message);
      }
      
      function onSuccess() {
        const spinner = document.getElementById('spinner');
        const status = document.getElementById('status');
        const sendBtn = document.getElementById('sendBtn');
        
        spinner.style.display = 'none';
        sendBtn.textContent = 'Wys≈Çano ‚úì';
        sendBtn.style.background = '#34a853';
        
        showStatus('‚úÖ Dziƒôkujemy! Wiadomo≈õƒá zosta≈Ça wys≈Çana.', 'success');
        
        // Zamknij okno po 2 sekundach
        setTimeout(function() {
          google.script.host.close();
        }, 2000);
      }
      
      function onFailure(error) {
        const sendBtn = document.getElementById('sendBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const spinner = document.getElementById('spinner');
        
        spinner.style.display = 'none';
        sendBtn.disabled = false;
        cancelBtn.disabled = false;
        sendBtn.textContent = 'Wy≈õlij';
        
        showStatus('‚ùå B≈ÇƒÖd wysy≈Çania: ' + (error.message || error), 'error');
      }
      
      function showStatus(message, type) {
        const status = document.getElementById('status');
        status.textContent = message;
        status.className = 'status ' + type;
        status.style.display = 'block';
      }
      
      function cancel() {
        google.script.host.close();
      }
      
      // Autofocus na textarea
      window.addEventListener('load', function() {
        document.getElementById('message').focus();
      });
    </script>
  </body>
